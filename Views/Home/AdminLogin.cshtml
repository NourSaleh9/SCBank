@model SCBankGym.Models.TrainerModel

@{
    ViewData["Title"] = "Trainer Login Form";
}


<div class="container" style="margin-top:25px;margin-bottom:25px">
    <div class="row">
       
        <div class="col-8">
            <form class="form-horizontal" asp-controller="Admin"  asp-action="Index" method="post">
               <div class="form-group">
                    <h3 >Are you a trainer ?! <br /> Login here...</h3>
                    <div class="form-floating mb-3">
                    <input asp-for="Name" type="text" class="form-control"  placeholder="Ahmed">
                    <label for="floatingInput">Trainer Name</label>
                    </div>
                    <div class="form-floating">
                    <input asp-for="Passwordd" type="password" class="form-control"  placeholder="Password">
                    <label for="floatingPassword">Trainer Password</label>
                    </div>
                </div>
               <div class="form-group">

                  <input type="submit" value="Submit"  class="btn btn-outline-primary" />
              
                </div>
            </form>
        </div>
        
    </div>
</div>
