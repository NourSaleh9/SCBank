@model SCBankGym.Models.TraineeModel

@{
    ViewData["Title"] = "Trainee Login Form";
}


<div class="container" style="margin-top:25px;margin-bottom:25px">
    <div class="row">
       
        <div class="col-8">
            <form class="form-horizontal" asp-action="TraineeLogin" method="post">
               <div class="form-group">
  <h3 >Are you already a Member ?! <br /> Login here...</h3>
  <div class="form-floating mb-3">
    <input type="email" class="form-control" id="floatingInput" asp-for="Email" placeholder="name@example.com" required>
    <label for="floatingInput">Email address</label>
  </div>
  <div class="form-floating">
    <input type="password" class="form-control" id="floatingPassword" asp-for="Passwordd"placeholder="Password" required>
    <label for="floatingPassword">Password</label>
  </div>
</div>
                <div class="form-group">
                     <p >@ViewBag.Error</p>
                  <input type="submit" value="Submit"  class="btn btn-outline-primary" />
              
                </div>
            </form>
        </div>
        
    </div>
</div>