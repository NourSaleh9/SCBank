    </fieldset>
    
            <fieldset class="form-group">
      <legend class="mt-4">Membership Type</legend>
      <div class="form-check">
        <label class="form-check-label">
          <input type="radio" class="form-check-input"  name="Subscription" id="standard" value="standard" checked="">
          Standard
        </label>
      </div>
      <div class="form-check">
        <label class="form-check-label">
          <input type="radio" class="form-check-input" name="Subscription" id="premium" value="premium">
          Premium
        </label>
      </div>
      <div class="form-check disabled">
        <label class="form-check-label">
          <input type="radio" class="form-check-input" name="Subscription" id="ultimate" value="ultimate" >
          Ultimate
        </label>
      </div>
    </fieldset>
      <fieldset class="form-group">
      <legend class="mt-4">Preferred way to contact</legend>
      <div class="form-check">
        <label class="form-check-label">
          <input type="radio" class="form-check-input" name="preferredContact" id="phone" value="option1" checked="">
          Phone
        </label>
      </div>
      <div class="form-check">
        <label class="form-check-label">
          <input type="radio" class="form-check-input" name="preferredContact" id="email" value="option2">
          Email
        </label>
      </div>
      <div class="form-check disabled">
        <label class="form-check-label">
          <input type="radio" class="form-check-input" name="preferredContact" id="optionsRadios3" value="option3" >
          Any
        </label>
      </div>
    </fieldset>
       
        <h2>Terms and Conditions</h2>
        <input type="checkbox" name="checkbox1" class="form-check-input" required>
        <label>You consent to receive communications from us electronically. We will communicate with you by e-mail or phone. You agree that all agreements, notices, disclosures and other communications that we provide to you electronically satisfy any legal requirement that such communications be in writing.</label>
        <div class="btn-block">
          <button type="submit" href="/" class="btn btn-outline-success" onclick="notify()">Submit</button>
        </div>
      </form>
      </div>
    </div>

    </div>
    
    
