@model SCBankGym.Models.TraineeModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    


 
    <div  class="card border-dark mb-3" >
        <div class="card-header">
          <h1 class="display-4" >New Member Registration</h1>
        </div>
        <div class="card-body">
      <form asp-action="TraineeRegister">
     
        <div class="rows">
          <div class="item">
            <label for="floatingInput" class="form-label mt-4" > First Name<span>*</span></label>
            <input asp-for="FirstName" type="text" class="form-control"  required/>
          </div>
          <div class="item">
            <label for="floatingInput" class="form-label mt-4"> Last Name<span>*</span></label>
            <input asp-for="LastName" type="text" class="form-control" required/>
          </div>
          <div class="item">
            <label for="floatingInput" class="form-label mt-4">Age<span>*</span></label>
            <input asp-for="Age" type="number"  class="form-control" required/>
          </div>
          <div class="item">
            <label for="floatingInput" class="form-label mt-4">City<span>*</span></label>
            <input asp-for="City" type="text"   class="form-control" required/>
          </div>
          <div class="item">
            <label for="floatingInput" class="form-label mt-4" type="email">Email Address<span>*</span></label>
            
          <p >@ViewBag.Error</p>
            <input asp-for="Email" type="email"   class="form-control" required/>
          </div>
          <div class="item">
            <label for="floatingInput" class="form-label mt-4">Phone<span>*</span></label>
            <input asp-for="Phone" type="tel"  class="form-control" required/>
          </div>
        </div>
         <div class="item">
            <label for="floatingPassword" class="form-label mt-4" >Password<span>*</span></label>
            <input  asp-for="Passwordd"  type="password"   class="form-control" required/>
          </div>
           <div class="item">
            <label for="floatingPassword" class="form-label mt-4">Confirm Password<span>*</span></label>
            <input  type="password"  class="form-control" required/>
          </div>
                  <fieldset class="form-group">
      <legend class="mt-4">Gender</legend>
      <div class="form-check">
        <label class="form-check-label">
          <input  type="radio" class="form-check-input" name="gender" id="male" value="male" >
          Male
        </label>
      </div>
      <div class="form-check">
        <label class="form-check-label">
          <input type="radio" class="form-check-input" name="gender" id="female" value="female">
          Female
        </label>
      </div>
      
    </fieldset>

            <fieldset class="form-group">
      <legend class="mt-4">Classes</legend>
      <div class="row">
          <div class="col-3">
 <input type="checkbox" name="class" >
        <label class="form-check-label" for="flexCheckDefault">
          GYM
        </label>
          </div>          <div class="col-3">
